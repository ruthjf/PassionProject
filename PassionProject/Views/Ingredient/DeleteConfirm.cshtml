@model PassionProject.Models.IngredientDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="inner-container">
    <div id="left-nav">
        <a href="/Ingredient/List" class="button">Back</a>
    </div>
    <div class="delete-container">
        <div class="delete-msg">
            <p>Are you sure you want to delete this ingredient?</p>
            <form action="/Ingredient/Delete/@Model.IngredientID" method="POST">
                <input type="submit" value="Confirm Delete" class="button" id="del-b" />
            </form>
        </div>
    </div>
    <div>
        <h2>@Model.IngredientName</h2>
    </div>
</div>

